  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      let cart = [];
      const cartCount = document.getElementById("cartCount");
      const buySection = document.getElementById("buySection");
      const message = document.getElementById("message");
      const cartList = document.getElementById("cartList");

      document.querySelectorAll(".add-cart").forEach(btn => {
        btn.addEventListener("click", () => {
          const productName = btn.closest(".card-body").querySelector("h6").innerText;
          cart.push(productName);
          cartCount.innerText = cart.length;
          buySection.classList.remove("d-none");
          renderCart();
        });
      });

      function renderCart() {
        cartList.innerHTML = "";
        cart.forEach(item => {
          const li = document.createElement("li");
          li.className = "list-group-item";
          li.innerText = item;
          cartList.appendChild(li);
        });
      }

      document.getElementById("buyBtn").addEventListener("click", () => {
        message.innerText = "Sipari≈üiniz alƒ±ndƒ±. Bizi tercih ettiƒüiniz i√ßin te≈üekk√ºr ederiz üòä";
        message.classList.remove("d-none");
        setTimeout(() => message.classList.add("d-none"), 3000);
        cart = [];
        cartCount.innerText = 0;
        cartList.innerHTML = "";
        buySection.classList.add("d-none");
      });

      document.getElementById("donateBtn").addEventListener("click", () => {
        message.innerText =
          "Baƒüƒ±≈üƒ±nƒ±z i√ßin te≈üekk√ºr ederiz. Bilgisayarlar en hƒ±zlƒ± ≈üekilde ihtiyacƒ± olan okullara ula≈ütƒ±rƒ±lacaktƒ±r üéÅ";
        message.classList.remove("d-none");
        setTimeout(() => message.classList.add("d-none"), 3000);
        cart = [];
        cartCount.innerText = 0;
        cartList.innerHTML = "";
        buySection.classList.add("d-none");
      });
    });
  </script>
